<resources>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="colorAccent">?android:attr/colorPrimary</item>
    </style>
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="colorAccent">?android:attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashset</item>
    </style>
    <style name="DialogAnimation" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/dialogopen</item>
        <item name="android:windowExitAnimation">@anim/dialogclose</item>
    </style>
</resources>
